{% extends 'base.html.twig' %}

{% block title %}{% trans %}Personal Settings{% endtrans %}{% endblock %}

{% block menu %}
    {% include(':dashboard/parts:menu.html.twig') %}
{% endblock %}

{% block body %}
    <main>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="panel panel-default panel-menu">
                        <h4 class="caption-name text-center">Menu</h4>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="{{ path('settings') }}">{% trans %}General Settings{% endtrans %}</a><span class="glyphicon glyphicon-menu-right"></span></li>
                            <li class="list-group-item"><a href="{{ path('personal_settings') }}">{% trans %}Personal Info{% endtrans %}</a><span class="glyphicon glyphicon-menu-right"></span></li>
                            <li class="list-group-item"><a href="{{ path('bans') }}">{% trans %}Bans{% endtrans %}</a><span class="glyphicon glyphicon-menu-right"></span></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel panel-default settings">
                        <h3>{% trans %}Personal Settings{% endtrans %}</h3><br>
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="col-md-3">
                    {% for note in user.notes %}
                        <div class="alert alert-{{ note.type }} alert-dismissible" role="alert">
                            <button type="button" class="close each-note" data-dismiss="alert" data-id="{{ note.id }}"><span>&times;</span></button>
                            {{ note.message }}
                        </div>
                    {% endfor %}

                    {% include(':dashboard/parts:copyright.html.twig') %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}